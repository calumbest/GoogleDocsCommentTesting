{
  "manifest_version": 3,
  "name": "Google Docs Comment Injector",
  "version": "1.0.0",
  "description": "Test 7: Inject anchored comments via internal API",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://docs.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Add Comment"
  },
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/document/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
